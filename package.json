{
  "name": "shader-canvas",
  "version": "0.0.1",
  "description": "A web component running WebGL shaders",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build:types": "tsc -t esnext --moduleResolution node -d --emitDeclarationOnly --outFile dist/shader-canvas.d.ts src/shader-canvas.ts",
    "build:js": "rollup -c rollup.config.js",
    "build:min": "./scripts/minify.sh",
    "build": "npm run build:js -s && npm run build:min -s && npm run build:types -s",
    "copyjs:demos": "cp dist/shader-canvas.umd.min.js public",
    "build:demos": "pug src/examples/*.pug -O pug.config.js -o public",
    "watch:demos": "pug src/examples/*.pug -O pug.config.js -o public -w",
    "serve:demos": "node scripts/serve-demos",
    "predev:demos": "npm run build -s && npm run copyjs:demos -s",
    "dev:demos": "concurrently 'npm:watch:demos' 'npm:serve:demos'",
    "test": "jest"
  },
  "keywords": [
    "webgl",
    "creative-coding"
  ],
  "files": [
    "dist"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/jest": "^26.0.20",
    "browser-sync": "^2.26.14",
    "concurrently": "^5.3.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-webgl-canvas-mock": "^0.2.3",
    "jstransformer-scss": "github:terabaud/jstransformer-scss",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^2.38.0",
    "sass": "^1.32.5",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "jstransformer-markdown-it": "^2.1.0"
  }
}
