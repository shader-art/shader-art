{
  "name": "shader-art",
  "version": "0.1.4",
  "description": "A web component running WebGL shaders",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build:types": "./scripts/minify.sh",
    "build:js": "rollup -c rollup.config.js",
    "build:min": "./scripts/minify.sh",
    "build": "npm run build:js -s && npm run build:min -s && npm run build:types -s",
    "test": "jest"
  },
  "types": "./dist/shader-art.d.ts",
  "keywords": [
    "webgl",
    "creative-coding"
  ],
  "files": [
    "dist",
    "dist/plugins"
  ],
  "module": "./dist/shader-art.esm.min.js",
  "exports": {
    ".": {
      "import": "./dist/shader-art.esm.min.js",
      "require": "./dist/shader-art.umd.min.js"
    },
    "./plugins/texture-plugin": {
      "import": "./dist/plugins/texture-plugin.esm.min.js",
      "require": "./dist/plugins/texture-plugin.umd.min.js"
    }
  },
  "author": "Lea Rosema",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/jest": "^26.0.20",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-webgl-canvas-mock": "^0.2.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.38.0",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {}
}
