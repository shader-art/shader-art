{
  "name": "shader-art",
  "version": "1.0.0",
  "description": "A web component running WebGL shaders",
  "engines": {
    "node": ">=12"
  },
  "repository": "shader-art/shader-art/",
  "author": "Lea Rosema",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.esm.js",
  "main": "./dist/index.esm.js",
  "scripts": {
    "build": "npm run build:types -s && npm run build:js -s && npm run build:cjs -s",
    "build:types": "tsc -d --emitDeclarationOnly",
    "build:js": "esbuild --format=esm --bundle --minify src/index.ts > dist/index.esm.js",
    "build:cjs": "esbuild --format=cjs --bundle --minify src/index.ts > dist/index.cjs",
    "lint": "npm run lint:js -s && npm run lint:package -s",
    "lint:js": "eslint src",
    "lint:package": "npx @skypack/package-check",
    "test": "npm run lint -s && jest -c jest.config.cjs"
  },
  "keywords": [
    "webgl",
    "glsl",
    "creative-coding"
  ],
  "files": [
    "dist",
    "dist/plugins"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs"
    }
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "esbuild": "^0.8.46",
    "eslint": "^7.20.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-webgl-canvas-mock": "^0.2.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.4.4",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@shader-art/plugin-base": "^0.1.1"
  }
}
